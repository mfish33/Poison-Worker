{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "module": "commonjs"
  }
}